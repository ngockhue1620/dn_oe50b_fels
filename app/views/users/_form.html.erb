<div class="container card">
  <div class="card-body">
    <%= form_for @user do |form| %>
      <div class="form-group">
        <%= form.label :name %>
          <%= form.text_field :name, class: "form-control" , :required=> true %>
      </div>
      <div class="form-group">
        <%= form.label :email %>
          <%= form.email_field :email, class: "form-control" , :required=> true %>
      </div>
      <div class="form-group">
        <%= form.label :user_name %>
          <%= form.text_field :user_name, class: "form-control" , :required=> true %>
      </div>
      <div class="form-group">
        <%= form.label :password %>
          <%= form.text_field :password, class: "form-control" , :required=> true %>
      </div>
      <div class="form-group">
        <%= form.label :password_confirmation %>
          <%= form.text_field :password_confirmation, class: "form-control" , :required=> true %>
      </div>
      <div class="actions">
        <%= form.submit t("layouts.sign_in"), class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>
