<p id="notice"><%= notice %></p>

<h1>Lessions</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lessions.each do |lession| %>
      <tr>
        <td><%= lession.name %></td>
        <td><%= link_to 'Show', lession %></td>
        <td><%= link_to 'Edit', edit_lession_path(lession) %></td>
        <td><%= link_to 'Destroy', lession, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

