<div class="container">
  <%= form_with(model: course) do |form| %>
    <div class="form-group">
      <%= form.label t "courses.name" %>
      <%= form.text_field :name, class: "form-control", required: true %>
    </div>
    <div class="form-group">
      <%= form.label t "courses.description" %>
      <%= form.text_field :description, class: "form-control",  required: true %>
    </div>

    <div class="form-group">
      <%= form.label t "courses.image" %>
      <%= form.text_field :image, class: "form-control", required: true %>
    </div>

    <div class="actions">
      <%= form.submit t("courses.create"), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>
