<div class="container">
  <%= form_with(model: course) do |form| %>
    <% if course.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(course.errors.count, "error") %> prohibited this course from being saved:</h2>

        <ul>
          <% course.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control", :required => true %>
    </div>
    <div class="form-group">
      <%= form.label :description %>
      <%= form.text_field :description, class: "form-control", :required => true %>
    </div>

    <div class="form-group">
      <%= form.label :image %>
      <%= form.text_field :image, class: "form-control", :required => true %>
    </div>

    <div class="actions">
      <%= form.submit t("courses.create"), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>